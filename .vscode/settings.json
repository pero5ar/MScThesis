{
    "files.exclude": {
        "**/node_modules/**": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.detectIndentation": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact"
    ],
    "eslint.autoFixOnSave": true,
    "scssFormatter.useTabs": true,
    "scssFormatter.tabWidth": 4,
    "scssFormatter.singleQuote": true,
    "cSpell.words": [
        "mongodb",
        "mscthesis"
    ]
}